#alias lt='ls -ltFh --color=auto'   #long list,sorted by date,show type,human readable
alias ldot='ls -ld .* --color=auto'
alias lS='ls -1FSsh --color=auto'
alias lart='ls -1Fcart --color=auto'
alias lrt='ls -1Fcrt --color=auto'

